generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Ventas {
  id_ventas   BigInt @id @default(autoincrement())
  id_cliente  BigInt?
  id_componen BigInt?
  Monto       Decimal?
  FechaHora   DateTime? @default(now())
}
model Clientes {
  Id_cliente  BigInt @id @default(autoincrement())
  cliente     String?
  Celular     String?
  Domicilio   String?
}
model Componentes {
  id_componen  BigInt @id @default(autoincrement())
  componente   String?
  precio       Int?
  Disponible   Int?
}
model Usuarios {
  Id_usuario  BigInt @id @default(autoincrement())
  Usuario     String?
  Cuenta      String?
  Clave       String?
  nivel       Int?
  Idioma      Int?
}

